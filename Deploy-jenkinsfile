pipeline {
    	    agent {label "Deploy_Server"}
stages 
                {	

                stage ("This will copy the package from S3 to webapps on deploy server.")
	                {
                        steps 
	                        {
		                        node ("Deploy_Server")
		                            {
		                                sh "rm -rf /tomcat/webapps/demo1.war"
		                                dir("/tomcat/webapps") 
		                                    {
                                                	sh "aws s3 cp s3://sankalpkabucket/demo1.war /tomcat/webapps/"
		                                    }
		                            }
	                        }
                        }
	         }
       }
